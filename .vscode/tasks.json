{
    "tasks": [
        {
            "type": "shell",
            "label": "build & debug file",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "shell",
            "label": "cd",
            "command": "cd",
            "args": [
                "${fileDirname}"
            ],
            "group": "none"
        },
        {
            "type": "shell",
            "label": "clear",
            "command": "rm",
            "args": [
                "-rf",
                "main",
                "main.dSYM"
            ],
            "group": "none"
        },
        {
            "label": "cleanup",
            "dependsOn": [
                "cd",
                "clear"
            ]
        }
    ],
    "version": "2.0.0"
}